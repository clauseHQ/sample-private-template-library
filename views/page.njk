{%set pre_style="white-space: pre-wrap; border: 0; background-color: transparent;"%}
{%set code_style="white-space: pre-wrap;"%}

<!DOCTYPE html>
<html>
<head>
    <script>
        // handle drop down menus
        window.addEventListener('load', function () {
            var dropdown = document.querySelector('.dropdown');
            if(dropdown) {
                dropdown.addEventListener('click', function(event) {
                    event.stopPropagation();
                    dropdown.classList.toggle('is-active');
                });
            }
        }, false);
    </script>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {%set title="{{LIBRARY_OWNER}} Template Library"%}
    {%set description="Library hosting Accord Project templates."%}

    <!-— generic unfurl tags -->
    <meta property="og:type" content="website" />
    <meta name="twitter:label1" content="Apache 2.0 Licensed" />
    <meta name="twitter:data1" content="on GitHub.com" />

    {% block unfurl %}
    <!-— facebook open graph tags -->
    <meta property="og:url" content="{{serverRoot}}" />
    <meta property="og:title" content="{{title}}" />
    <meta property="og:description" content="{{description}}" />
    <meta property="og:image" content="{{serverRoot}}/{{LIBRARY_OWNER_LOGO}}" />
 
    <!-— twitter card tags additive with the og: tags -->
    <meta name="twitter:title" content="{{title}}" />
    <meta name="twitter:description" content="{{description}}" />
    <meta name="twitter:image" content="{{serverRoot}}/{{LIBRARY_OWNER_LOGO}}" />
    <meta name="twitter:image:alt" content="The {{LIBRARY_OWNER}} logo" />
    <meta name="twitter:url" content="{{serverRoot}}" />
    {% endblock %}

    <title>Accord Project Template Library</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
</head>

<body>
    <section class="section">
        <div class="container">
            <a href="/">
                <img src="/{{LIBRARY_OWNER_LOGO}}" />
            </a>
        </div>
    </section>

    {% block body %} {% endblock %}

    <footer class="footer">
        <div class="container">
            <div class="content has-text-centered">
                <p>
                    Licensed under the
                    <a href="https://www.apache.org/licenses/LICENSE-2.0.html">Apache-2.0</a> Open Source software license.
                </p>
            </div>
        </div>
    </footer>
</body>

</html>